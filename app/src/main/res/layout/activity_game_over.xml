<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nayeer.squiro.GameOver.GameOverActivity"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp"
    android:id="@+id/relative_layout"
>

    <!-- Background color -->
    <!-- sert à délimiter la fenetre -->
    <View
        android:id="@+id/delimiterView"
        android:layout_width="@dimen/_235sdp"
        android:layout_height="@dimen/_300sdp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:background="@android:color/transparent"
    />

    <!-- barre du haut -->
    <View
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="@dimen/_7sdp"
        android:background="#51000000"/>



    <!-- fond score actuel -->
    <View
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_86sdp"
        android:layout_marginTop="@dimen/_38sdp"
        android:layout_marginLeft="@dimen/_7sdp"
        android:background="#eaeaea" />

    <!-- fond bestscore -->
    <View
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_160sdp"
        android:layout_marginLeft="@dimen/_7sdp"
        android:background="#c2c2c2" />


    <!-- GAME OVER -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="@dimen/_235sdp"
        android:layout_height="@dimen/_35sdp"
        android:text="GAME OVER"
        android:textSize="@dimen/_28sdp"
        android:textStyle="bold"
        android:textColor="#b1b1b1"
        android:gravity="center"
    />

    <!-- ACTUAL SCORE ELEMENTS -->
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:text="Score "
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="#4d4d4d"/>



    <EditText
        android:id="@+id/pseudoInput"
        android:layout_height="wrap_content"
        android:hint="Pseudo"
        android:inputType="text"
        android:layout_width="@dimen/_130sdp"
        android:layout_marginTop="@dimen/_75sdp"
        android:layout_marginLeft="@dimen/_15sdp"/>


    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/gold"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_180sdp"
        android:id="@+id/scoreMedal"
        />



    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="@dimen/_47sdp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_172sdp"
        android:layout_marginTop="@dimen/_82sdp"
        android:text="999"
        android:textColor="#4040b6"
        android:textSize="@dimen/_23ssp"
        android:textStyle="bold"
        android:background="@drawable/border"
        android:gravity="center"
        />





    <!-- BEST SCORE ELEMENTS -->
    <TextView
        android:id="@+id/bestLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_165sdp"
        android:text="Best"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="#4d4d4d"/>




    <TextView
        android:id="@+id/bestScorePseudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_203sdp"
        android:text="Anonymous"
        android:textSize="19sp" />

    <ImageView
        android:id="@+id/bestScoreMedal"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/gold"
        android:layout_marginTop="@dimen/_165sdp"
        android:layout_marginLeft="@dimen/_180sdp"
        />


    <TextView
        android:id="@+id/bestScoreTextView"
        android:layout_width="@dimen/_41sdp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_175sdp"
        android:layout_marginTop="@dimen/_200sdp"
        android:text="-1"
        android:textColor="#302d23"
        android:textSize="@dimen/_19ssp"
        android:textStyle="bold"
        android:background="@drawable/border"
        android:gravity="center"/>



    <!-- BUTTONS -->
    <Button
        android:id="@+id/replayBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onReplayButton"
        android:text="REPLAY"
        android:textColor="#ffffff"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_260sdp"
        app:backgroundTint="#669755"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onQuitButton"
        android:text="Quit"
        android:textColor="#ffffff"
        android:layout_marginLeft="@dimen/_125sdp"
        android:layout_marginTop="@dimen/_260sdp"
        app:backgroundTint="#434343"
    />

</RelativeLayout>
